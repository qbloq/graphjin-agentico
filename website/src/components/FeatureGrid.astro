---
import { Cpu, Zap, Shield, Search, Database, Code } from 'lucide-react';

const features = [
  {
    icon: Cpu,
    title: 'AI Native',
    description: 'Built for MCP. AI assistants get structured, validated access to your database schema.'
  },
  {
    icon: Search,
    title: 'Auto Discovery',
    description: 'Connects to your database and learns tables, columns, and relationships instantly.'
  },
  {
    icon: Zap,
    title: 'Single Query',
    description: 'No N+1. Compiles any GraphQL query into a single, optimized SQL statement.'
  },
  {
    icon: Database,
    title: 'Multi-Database',
    description: 'Postgres, MySQL, MongoDB, SQLite, MSSQL, Oracle â€” one API for all.'
  },
  {
    icon: Shield,
    title: 'Production Ready',
    description: 'Allow-lists, role-based access, JWT auth. Enterprise-grade security built-in.'
  },
  {
    icon: Code,
    title: 'No Resolvers',
    description: 'No boilerplate. GraphJin maps your graph to relational data automatically.'
  }
];
---

<section id="features" class="py-24 bg-gj-surface border-y border-gj-border">
  <div class="container-wide">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl md:text-5xl font-display font-bold text-gj-text mb-4">Why GraphJin?</h2>
      <p class="text-gj-muted text-lg">
        Built for the AI era. No resolvers, no ORMs, no N+1 problems.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map(feature => (
        <div class="p-6 rounded-xl bg-white/50 border border-gj-border hover:border-gj-dark/30 hover:bg-white/80 transition-all duration-300">
          <div class="w-10 h-10 rounded-lg bg-gj-dark/5 flex items-center justify-center mb-4">
            <feature.icon className="w-5 h-5 text-gj-dark" />
          </div>
          <h3 class="text-lg font-display font-bold text-gj-text mb-2">{feature.title}</h3>
          <p class="text-gj-muted text-sm leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
