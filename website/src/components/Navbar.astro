      GraphJin
    </a>

    <div class="hidden md:flex items-center gap-8">
      {navItems.map(item => (
        <a
          href={item.href}
          class="text-sm font-medium text-gj-muted hover:text-gj-text transition-colors"
          {...(item.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
        >
          {item.name}
        </a>
      ))}
    </div>

    <div class="flex items-center gap-4">
